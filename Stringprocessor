public class StringProcessor {
    public static String reverseText(String input) {
        if (input == null || input.isEmpty()) {
            return input;
        }

        String reversed = "";
        // Start from the last index and move towards 0
        for (int i = input.length() - 1; i >= 0; i--) {
            reversed += input.charAt(i); 
        }
        
        return reversed;
    }

    public static void main(String[] args) {
        String original = "Java Logic";
        String result = reverseText(original);
        System.out.println("Reversed: " + result); // Output: cigoL avaJ
    }
}
