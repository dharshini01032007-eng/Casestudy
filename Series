import java.util.Scanner;

public class GrowthSeriesGenerator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the number of terms for the growth series: ");
        int terms = scanner.nextInt();

        long firstTerm = 0, secondTerm = 1;
        System.out.println("Generating Series for " + terms + " intervals:");

        for (int i = 1; i <= terms; i++) {
            System.out.print(firstTerm + (i < terms ? ", " : "\n"));
            
            // Logic to calculate the next term
            long nextTerm = firstTerm + secondTerm;
            firstTerm = secondTerm;
            secondTerm = nextTerm;
        }
        scanner.close();
    }
}
