public class TextAnalysis {
    public static int countOccurrences(String text, char target) {
        if (text == null) return 0;
        
        int count = 0;
        for (int i = 0; i < text.length(); i++) {
            // Check if the current character matches the target
            if (text.charAt(i) == target) {
                count++;
            }
        }
        return count;
    }

    public static void main(String[] args) {
        String doc = "Standardizing documentation";
        char searchFor = 'd';
        System.out.println("Occurrences of '" + searchFor + "': " + countOccurrences(doc, searchFor));
    }
}
